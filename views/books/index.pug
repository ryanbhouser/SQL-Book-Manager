extends ../layout

block content
  header.header
    .container
      h1= title
      a.btn.btn-primary(href='/books/new') Create New Book
  section.content
    .container
      table
        thead
          tr.no-hover
            th Title
            th Author
            th Genre
            th Year
        tbody
          each book in books
            tr
              td
                a(href='/books/' + book.id)= book.title
              td= book.author
              td= book.genre
              td= book.year